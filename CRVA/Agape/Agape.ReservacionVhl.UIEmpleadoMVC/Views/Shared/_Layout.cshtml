<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>

   
    <script src="~/Scripts/jquery-3.2.1.min.js"></script>
    <link href="~/Content/sweetalert2.min.css" rel="stylesheet" />

    <script src="~/Scripts/sweetalert2.js"></script>
    <link href="~/content/css/bootstrap.min.css" rel="stylesheet" />
    @*<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">*@

    <link href="~/Content/css/open-iconic-bootstrap.min.css" rel="stylesheet">
    <link href="~/Content/PagedList.css" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/css/video-estilo.css">
    <link rel="shortcut icon" href="~/favicon.ico">
    @*<link href="~/content/materialize/css/icons.css" rel="stylesheet" />*@
    <script src="~/Scripts/materialize.js"></script>
</head>
<body>

    <header>
        <nav class="navbar fixed-top navbar-expand-lg navbar-dark bg-dark justify-content-between hide-on-med-and-down">
            <a class="navbar-brand" href="@Url.Action("Index","Home")">
                <img src="../../favicon.ico" width="30" height="30" alt="">
                Reservaciones Ágape
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <form class="clearfix">
                <div class="collapse navbar-collapse float-lg-right" id="navbarSupportedContent">
                    <ul class="navbar-nav text-md-right">
                        <li class="nav-item">
                            <h6 class="nav-link text-white"><span class="oi oi-person"></span>  @Session["Name"].ToString().ToLowerInvariant()</h6>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="@Url.Action("Index","Catalogo")"><span class="oi oi-list"></span>  Catalogo<span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">

                            </a>
                            <div class="dropdown-menu" aria-labelledby="navbarDropdownMenuLink">
                                <h6 class="dropdown-item" href="#"><span class="oi oi-person"></span>  Empleado</h6>
                                <h6 class="dropdown-header" href="#">@Session["Name"]<br />@Session["LastName"]</h6>
                                @*<h6 class="dropdown-item " href="#"><span class="oi oi-badge"></span>  Area</h6>
                                <h6 class="dropdown-header" href="#"> Ágape, Sonsonate</h6>*@
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="@Url.Action("Index","Reservation", new { id = Session["UserID"] })"><span class="oi oi-calendar"></span> Reservaciones</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" href="@Url.Action("logOut","Catalogo")"><span class="oi oi-power-standby"></span>  Salir</a>
                            </div>
                        </li>
                        <li class="nav-item">
                            <h6 class="nav-link disabled" style="color:transparent">__________________</h6>
                        </li>

                    </ul>
                </div>
            </form>
        </nav>

        @*Barra de navegacion moviles*@
        <div class="pos-f-t">
            
            <nav class="navbar navbar-dark bg-dark show-on-medium-and-down">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarToggleExternalContent" aria-controls="navbarToggleExternalContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <a class="navbar-brand disabled text-white">
                    <img class="hide-on-small-only"  src="../../favicon.ico" width="30" height="30" alt="">
                    Reservaciones <span class="hide-on-small-only">Ágape</span> 
                </a>
            </nav>
            <div class="collapse hide-on-large-only" id="navbarToggleExternalContent">
                <div class="bg-dark p-4">
                    <a class="btn btn-dark btn-block " href="@Url.Action("Index","Catalogo")" style="text-align:left;"><span class="oi oi-list"></span>  Catalogo</a>
                    <a class="btn btn-dark btn-block" href="@Url.Action("Index","Reservation", new { id = Session["UserID"] })" style="text-align:left;"><span class="oi oi-calendar"></span> Reservaciones</a>
                    <a class="btn btn-dark btn-block" href="@Url.Action("logOut","Catalogo")" style="text-align:left;"><span class="oi oi-power-standby"></span>  Salir</a>
                </div>
            </div>
        </div>
    </header>
    <main>
        <div class="container">
            <div class="row">
                @RenderBody()
            </div>
        </div>
    </main>
    <footer>
        @*<nav class="navbar fixed-bottom navbar-light bg-light">
                <a class="navbar-brand">Reservacion de vehiculos Ágape © @DateTime.Now.Year</a>
            </nav>*@
    </footer>
</body>
</html>

